@using CMS.Mvc.Helpers
@model CMS.Mvc.ViewModels.Generic.GenericPageViewModel
@{
    Layout = "~/Views/Afton/Shared/MasterWithPersonalizationCards.cshtml";
    ViewBag.Title = Model.Document.Title;
    ViewBag.SelectedMenuItem = Model.Document.NodeGUID;
    var Url = new UrlHelper(HttpContext.Current.Request.RequestContext);
}
@Html.Partial("~/Views/Afton/Solution/_heroImage.cshtml", Model.Document.HeroImage)
<div id="twoColumnC-sidebar" class="@if (!string.IsNullOrEmpty(Model.Document.HeroImage)) {@UtilsHelper.ToHtmlString("negMargin") }
                                    else { @UtilsHelper.ToHtmlString("txtPaddingTop")} 
     padBtm">
    <div id="rtCol-contentArea">
        @Html.Partial("~/Views/Afton/Shared/_breadCrumb.cshtml", Model.BreadCrumb)
        @Html.Partial("~/Views/Afton/Generic/_header.cshtml", Model.Document)
        <div id="contentC">
            <div id="mainContentC" class="documentPagination">
                @if ( @Model.Document.map )
                {
                    @Html.Partial( "~/Views/Afton/Shared/_map.cshtml" )
                }
                @UtilsHelper.ToHtmlString( Model.Document.Copy.Replace( "~/", "/" ) )
                @if ( Model.Campaign == true )
                {

                    <a href="@Model.CampaignURL"><div class="contactBtn"> @UtilsHelper.GetLocalizedString("home_contact3")
                </div></a>

                }
            </div>
            @*<div class="padBtm">
                <div style="display: none;" class="paginationC"><a href="#" class="prev"></a><span class="pageNumbers"></span><a href="#" class="next"></a></div>
            </div>*@
            @{ Html.RenderAction("Widget", "RateContent", new { Request = Model.DocumentGUID }); }
        </div>
    </div>
    <div id="lftCol-sidebar">
        @Html.Partial("~/Views/Afton/Shared/Sidebar/_sideBar.cshtml", Model.SideBar)
    </div>
</div>


