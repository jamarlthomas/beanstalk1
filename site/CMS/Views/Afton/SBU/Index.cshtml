@using CMS.Mvc.ViewModels.SBU
@model SBUViewModel 
@{
    ViewBag.Title = "Solution Business Unit";
    Layout = "~/Views/Afton/Shared/Master.cshtml";
}

<!-- image -->
Anchor Menu:
@foreach (var item in Model.AnchorMenu)
{
    <p><a href="#">@item.Title</a></p>
}
<hr />
Description:
<p>
    <p>
        Left part<br />
        @Html.Raw(Model.LeftDescription)
    </p>
    <p>
        Right part <br />
        @Html.Raw(Model.RightDescription)
    </p>
</p>
<hr />
FAQ Description:
<p>@Html.Raw(Model.FAQDescription)</p>
<hr />
FAQs:
@foreach (var item in Model.FAQs)
{
    <p> 
        @item.Question <br />
        @item.Answer
    </p>
}
<hr />
Documents:
@foreach (var item in Model.DocumentTypes)
{
    <p>
        Document type: @item.Title <br />
        Documents:
        @foreach (var document in item.Documents)
        {
            <p>
                @document.Title <br />
                @document.Abstract <br />
                @document.Copy <br />
            </p>
        }
    </p>
}
<hr />
Solutions:
@foreach (var item in Model.Solutions)
{
    <p>
        @item.Title <br />
        @item.Description
    </p>
}

