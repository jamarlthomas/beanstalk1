	<a id="overview-pos" class="anchorTag"></a>
	<div class="twoColumnC padTop leadIn">
		@Html.Raw(Model.Description)
	</div>
	<a id="solutions-pos" class="anchorTag"></a>
	<div class="padTopBtm">
		<div class="fullWidth">
			<h2>@Model.Title Solutions</h2>
		</div>
		@Html.Partial("~/Views/Afton/SBU/_solutions.cshtml", Model.Solutions)
	</div>
	<a id="faqs-pos" class="anchorTag"></a>
	<div class="borders bgPattern">
		<div class="fullWidth padTopBtm">
			<h2 class="txtPaddingBtm">FAQs</h2>
			@Html.Raw(Model.FAQDescription)
			@Html.Partial("~/Views/Afton/SBU/_FAQs.cshtml", Model.FAQs)
			<a href="#" class="viewAllBtn">View All @Model.Title FAQs</a>
		</div>
	</div><a id="sheets-pos" class="anchorTag"></a>
	<div class="padTopBtm">
		<div class="fullWidth">
			<h2 class="txtPaddingBtm">@Model.Title Documents</h2>
			<div class="txtPaddingBtm">@Html.Raw(Model.DocumentsDescription)</div>
			<hr>
			<h2 class="txtPaddingTop">Product Data Sheets</h2>
			@Html.Partial("~/Views/Afton/SBU/_documentColumns.cshtml", Model.DocumentTypes)
			<a href="#" class="viewAllBtn">View All @Model.Title Documents</a>
		</div>
	</div>
