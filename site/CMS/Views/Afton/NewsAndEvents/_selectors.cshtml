@using CMS.Mvc.Helpers
@model CMS.Mvc.ViewModels.NewsAndEvents.NewsAndEventsPageViewModel

<div id="newsDD">
    <div id="categoriesDD">
        @Model.FilterByLabel<br>
        <div class="customSelectC standard">
            <div class="orgSelect">
                <select name="categories">
                    @foreach (var type in Model.Types)
                    {
                        <option value="@type.Split('&')[0]">@type</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div id="MonthDD">
        <br />
        <div class="customSelectC standard">
            <div class="orgSelect">
                <select name="categories">
                    @foreach (var date in Model.Dates)
                    {
                        if (date.Equals(DateTime.Now.ToString("MMM yy")))
                        {
                            <option value="@date" selected="selected">@date</option>
                        }
                        else
                        {
                            <option value="@date">@date</option>
                        }
                    }
                    <option value="View All" >@UtilsHelper.GetLocalizedString("news_ViewAll")</option>
                </select>
            </div>
        </div>
    </div>
    <div id="sortDD">
        @{ Html.RenderPartial("~/Views/Afton/Shared/NewsEventsAndBlog/_sortSelector.cshtml", Model); }
    </div>
</div>
