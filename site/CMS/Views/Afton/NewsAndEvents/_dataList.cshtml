<div id="newsListC">
    @foreach (var item in Model.NewsAndEventsList)
    {
        <div class="newsItem">
            <div class="newsImgC"><img src="@Url.Content(item.Image)"></div>
            <div class="newsContentC">
                <h2>@item.Title</h2>
                <div class="newsInfo">@Model.PostedLabel @item.Date.ToString("M/d/yy | h:mm tt CST")</div>
                <div class="newsTxt">@Html.Raw(item.Description)</div>
                <a href="@item.DocumentUrlPath" class="newsMore">@Model.ReadMoreLabel</a>
            </div>
        </div>
    }
    <div class="fullWidth2 padBtm padTop">
        <div class="paginationC"><a href="#" class="prev"></a><a href="#">1</a><a href="#">2</a><a href="#">3</a><a href="#">4</a><a href="#">5</a><span class="nextGroup">...</span><a href="#">50</a><a href="#" class="next"></a></div>
    </div>
</div>