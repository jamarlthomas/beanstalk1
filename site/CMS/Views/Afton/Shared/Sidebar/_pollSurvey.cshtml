@using CMS.Mvc.Helpers
@model CMS.Mvc.ViewModels.Shared.SidebarComponents.PollSurveyViewModel
@Html.Raw(Model.Question) : 
@Model.NodeAlias
@foreach (var answer in Model.Answers)
{
    <p>@answer.Title : @answer.NodeAlias</p>
}
@UtilsHelper.GetLocalizedString("sidebar_pollSurvey_TotalVotes")
@Model.TotalVotes <br/>
@UtilsHelper.GetLocalizedString("sidebar_pollSurvey_Left")
@((Model.Expire - DateTime.Now).TotalDays)<br/>
@UtilsHelper.GetLocalizedString("sidebar_pollSurvey_FeedbackPrompt")
@Model.FeedbackPrompt<br/>