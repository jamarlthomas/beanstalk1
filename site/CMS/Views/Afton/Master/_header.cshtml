                </div>
            }
        </div>
    </div>
    <div id="topHeader">
        <header>
            <a href="/">
                <img src="@Url.Content("~/images/logo.svg")" id="dLogo" alt=@UtilsHelper.GetLocalizedString("master_header_LogoTitle") title=@UtilsHelper.GetLocalizedString("master_header_LogoTitle") />
                <img src="@Url.Content("~/images/logo-mobile.svg")" id="mLogo" alt=@UtilsHelper.GetLocalizedString("master_header_LogoTitle") title=@UtilsHelper.GetLocalizedString("master_header_LogoTitle") style="display: none;" />

            </a>
            <a href="#" id="mobileBtn" style="display: none;">
                <img src="@Url.Content("~/images/mobileBtn.gif")" />
            </a>
            <a href="#" id="mobileSearch" style="display: none;">
                <span class="icon-search"></span>
