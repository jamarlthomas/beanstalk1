@using CMS.Helpers
@using CMS.Mvc.Helpers
@using CMS.Mvc.ViewModels.Master
@model MasterViewModel

<div id="cookieOverlayC" style="display: none;">
    <div id="cookieDisplayC">
        <div id="mainTxt">@UtilsHelper.GetLocalizedString( "cookie_Message" ) <br><br> @UtilsHelper.GetLocalizedString( "cookie_Accept_Message" )</div><br><br>
        <div id="cookieDisplayOptions">
            <a href="#" class="cookieBtn accept">@UtilsHelper.GetLocalizedString("cookie_Allow_Message")</a>
            <a href="#" class="cookieBtn decline">@UtilsHelper.GetLocalizedString("cookie_Do_Not_Allow_Message")</a>
        </div>
        <br><br>
        <a href="#" class="policy">@UtilsHelper.GetLocalizedString("cookie_Policy_Message")</a>
    </div>
</div>

<div id="mobileNavC1">
    <div id="mobileNavC">
        <div id="menuHdrC">
            <div id="menuHdr">Menu</div>
            <div id="mobileNavStatus" style="display: none;"></div><a href="#" id="menuclose">
                <img src="@Url.Content("~/images/menuClose.gif")" />
            </a>
        </div>
        <div id="mainNavC">
            <ul>
                @foreach (var item in Model.MainNavList)
                {
                    <li>
                        <a href="@Url.Content("~/" + item.Reference)">@item.Title</a>
                        <ul>
                            @foreach (var thumbnailedItem in item.ThumbnailedMenuItems)
                            {
                                <li>
                                    <a href="@Url.Content("~/" + thumbnailedItem.Reference)">@thumbnailedItem.Title</a>
                                </li>
                            }
                            @if (item.SolutionsLink != null)
                            {
                                foreach (var solution in item.SolutionsLink.Solutions)
                                {
                                    <li>
                                        <a href="@Url.Content("~/" + solution.Reference)">@solution.Title</a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
        <div id="utilC">
            <ul>
                @foreach (var item in Model.UtilityNavList)
                {
                    <li><a href="@Url.Content("~/" + @item.Reference)">@item.Title</a></li>
                }
            </ul>
        </div>
    </div>
</div>
