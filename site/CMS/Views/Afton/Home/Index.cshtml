@using CMS.Mvc.ViewModels.Home
@using CMS.Mvc.ViewModels.Shared.Personalization
@using CMS.DocumentEngine.Types
@using CMS.Mvc.Helpers
@model HomeViewModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Afton/Shared/Master.cshtml";
}

<div id="contentAreaC">
    @Html.Partial("~/Views/Afton/Home/_heroContent.cshtml", Model.HeroContentList)
    <div class="cardsC bgPattern">
        @*@Html.Partial("~/Views/Afton/Shared/_tile.cshtml", Model.PrimaryTiles)*@
        <div class="cards">
            @foreach (PersonalizationCardViewModel card in @Model.PrimaryTiles)
            {
                @Html.Partial("~/Views/Afton/Shared/Personalization/_personalizationCard.cshtml", card)
            }

            @foreach (PersonalizationCardViewModel card in @Model.PersonalizedTiles)
            {
                @Html.Partial("~/Views/Afton/Shared/Personalization/_personalizationCard.cshtml", card)
            }

            @foreach (PersonalizationCardViewModel card in @Model.TrendingTiles)
            {
                @Html.Partial("~/Views/Afton/Home/_trendingTile.cshtml", card)
            }
        </div>
    </div>
    <div id="learnMoreC">
        <div id="learnMore">
            <div id="learnTxtC">
                <div id="learnHdr">@UtilsHelper.GetLocalizedString("home_contact1")</div>
                <div id="learnTxt">@UtilsHelper.GetLocalizedString( "home_contact2" )</div>
            </div>
            <div id="leanMoreBtnC"><a href="@Url.Content("~/"+ ContactPage.RoutePath)">@UtilsHelper.GetLocalizedString( "home_contact3" )<span class="icon-arrow"></span></a></div>
        </div>
    </div>
</div>




