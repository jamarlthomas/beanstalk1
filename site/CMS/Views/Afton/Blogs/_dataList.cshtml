@using CMS.Mvc.Helpers
@using CMS.Mvc.ViewModels.Blogs
@model BlogsPageViewModel
<div id="newsListC">
    @foreach (BlogPostViewModel item in Model.BlogPosts)
    {
        <div class="newsItem">
            <div class="newsImgC"><img src="@string.Format("CMSPages/GetFile.aspx?guid={0}", item.BlogPostTeaser)"></div>
            <div class="newsContentC">
                <h2>@item.BlogPostTitle</h2>
                <div class="newsInfo">@item.Category | @Model.PostedLabel @item.AuthorName: @item.BlogPostDate.ToString("M/d/yy | h:mm tt CST")</div>
                <div class="newsTxt">@UtilsHelper.ToHtmlString(item.BlogPostBody)</div>
                <a href="@item.DocumentRoutePath" class="newsMore">@Model.ReadMoreLabel</a>
            </div>
        </div>
    }
    @{ Html.RenderPartial("~/Views/Afton/Shared/_pagination.cshtml", @Model.Pagination); }
</div>