@model CMS.Mvc.ViewModels.Blogs.BlogsPageViewModel
<div id="newsDD">
    <div id="categoriesDD">
        @Model.FilterByLabel<br>
        <div class="customSelectC standard">
            <div class="orgSelect">
                <select name="categories">
                    @foreach (var selectOption in Model.Categories)
                    {
                        <option value="@selectOption.Title">@selectOption.Title</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div id="authorsDD">
        <br>
        <div class="customSelectC standard">
            <div class="orgSelect">
                <select name="authors">
                    @foreach (var selectOption in Model.Authors)
                    {
                        <option value="@selectOption.Title">@selectOption.Title</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div id="sortDD">
        @{ Html.RenderPartial("~/Views/Afton/Shared/NewsEventsAndBlog/_sortSelector.cshtml", Model); }
    </div>
</div>
